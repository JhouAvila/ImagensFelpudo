<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="false"
    android:textAlignment="center">

    <ImageView
        android:id="@+id/pictureRowView"
        android:layout_width="0dp"
        android:layout_height="246dp"
        android:background="@android:color/holo_orange_dark"
        android:contentDescription="@string/characterPicture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/felpudo" />

    <TextView
        android:id="@+id/specificNameView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:contentDescription="@string/characterName"
        android:fontFamily="casual"
        android:text="@string/characterName"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pictureRowView" />

</androidx.constraintlayout.widget.ConstraintLayout>